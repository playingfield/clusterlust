[all]
## Configure 'ip' variable to bind kubernetes services on a
## different ip than the default iface
node01 ansible_host=10.0.0.209 etcd_member_name=etcd1
node02 ansible_host=10.0.0.210 etcd_member_name=etcd2
node03 ansible_host=10.0.0.212 etcd_member_name=etcd3
node04 ansible_host=10.0.0.213
node05 ansible_host=10.0.0.214
node06 ansible_host=10.0.0.215

#  list of servers where kubernetes control plane components (apiserver, scheduler, controller) will run.
[kube_control_plane]
node01
node02
node03

# list of servers to compose the etcd server. You should have at least 3 servers for failover purpose.
[etcd]
node01
node02
node03

# list of kubernetes nodes where the pods will run.
[kube_node]
node04
node05
node06

[all:vars]

# https://kubespray.io/#/docs/CNI/calico
[calico_rr]

[k8s_cluster:children]
kube_control_plane
kube_node
calico_rr

[k8s_cluster:vars]
etcd_deployment_type=kubeadm

