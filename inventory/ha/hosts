[all]
## Configure 'ip' variable to bind kubernetes services on a
## different ip than the default iface
k8s-master01 ansible_host=192.168.178.231 ip=192.168.178.231 etcd_member_name=etcd1
k8s-master02 ansible_host=192.168.178.232 ip=192.168.178.232 etcd_member_name=etcd2
k8s-master03 ansible_host=192.168.178.233 ip=192.168.178.233 etcd_member_name=etcd3
k8s-node01 ansible_host=192.168.178.212 ip=192.168.178.212
k8s-node02 ansible_host=192.168.178.213 ip=192.168.178.213
k8s-node03 ansible_host=192.168.178.214 ip=192.168.178.214

#  list of servers where kubernetes control plane components (apiserver, scheduler, controller) will run.
[kube_control_plane]
k8s-master01
k8s-master02
k8s-master03

# list of servers to compose the etcd server. You should have at least 3 servers for failover purpose.
[etcd]
k8s-master01
k8s-master02
k8s-master03

# list of kubernetes nodes where the pods will run.
[kube_node]
k8s-node01
k8s-node02
k8s-node03

[all:vars]

[k8s_cluster:children]
kube_control_plane
kube_node

[controller]
localhost ansible_host=127.0.0.1

[controller:vars]
ansible_connection=local
ansible_python_interpreter=/home/semaphore/venv/bin/python3.12

[bastion]
